# SuperviseMe Environment Configuration
# Copy this file to .env and customize the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-secret-key-in-production-123456789

# Database Configuration
PG_USER=superviseme_user
PG_PASSWORD=superviseme_secure_password
PG_HOST=postgres
PG_PORT=5432
PG_DBNAME=superviseme

# Mail Configuration
MAIL_DEFAULT_SENDER=noreply@superviseme.local
MAIL_SERVER=mailhog
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=

# Application Settings
DEBUG=false