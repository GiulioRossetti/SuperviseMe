# SuperviseMe Environment Configuration
# Copy this file to .env and customize the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-secret-key-in-production-123456789
ADMIN_BOOTSTRAP_PASSWORD=change-this-admin-bootstrap-password

# Database Configuration
PG_USER=superviseme_user
PG_PASSWORD=superviseme_secure_password
PG_HOST=postgres
PG_PORT=5432
PG_DBNAME=superviseme

# Mail Configuration
MAIL_DEFAULT_SENDER=noreply@superviseme.local
MAIL_SERVER=mailhog
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=

# OAuth Configuration (leave blank to disable the corresponding login button)
ORCID_CLIENT_ID=
ORCID_CLIENT_SECRET=
ORCID_SCOPE=/authenticate
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username_here
BASE_URL=https://superviseme.local

# Application Settings
DEBUG=false
ENABLE_SCHEDULER=true
SKIP_DB_SEED=true
# Set to true when running behind a reverse proxy (e.g. nginx) to trust
# X-Forwarded-* headers; leave false when running directly.
USE_PROXY_FIX=false

# Optional seed script credentials (used by seed_database.py)
SEED_DEFAULT_PASSWORD=
SEED_SUPERVISOR_PASSWORD=
SEED_STUDENT_PASSWORD=
SEED_RESEARCHER_PASSWORD=
